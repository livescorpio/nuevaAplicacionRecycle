        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="-1dp"
        android:text="HOLA"
        android:textAlignment="center"
        android:textSize="20dp"
